    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "incremental": true
  },
  "include": ["script/**/*.ts"],
  "ts-node": {
      "esm": true
  },
  "exclude": [
    // "script/**/*.d.ts"
    // "node_modules",
    // "build",
    // "rollup.config.ts"
  ]
}
